<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.likeit.currenciesapp.ui.home.OtherResultActivity">

    <include layout="@layout/layout_header_with_back"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/comm_item_rate_info_result" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/rate_result_item_middle_height"
                android:background="@color/white"
                android:gravity="center"
                android:text="會員約定支付寶"
                android:textColor="@color/headerbg"
                android:textSize="16sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/rate_input_item_gap"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:minHeight="@dimen/rate_result_item_height"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/alipay_accout_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="好友淘寶帳號:"
                    android:textColor="@color/gray0"
                    android:textSize="@dimen/rate_input_txt_size" />

                <TextView
                    android:id="@+id/alipay_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="戶名:"
                    android:textColor="@color/gray0"
                    android:textSize="@dimen/rate_input_txt_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/rate_result_item_height"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <EditText
                    android:id="@+id/input_bank_account_et"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_round_stroke_rate_input3"
                    android:gravity="center_vertical"
                    android:hint="請輸入申請人電話"
                    android:maxLines="1"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/rate_input_txt_color2"
                    android:textColorHint="@color/rate_input_hint_txt_color"
                    android:textSize="@dimen/rate_input_txt_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/rate_result_item_height"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <EditText
                    android:id="@+id/input_bank_name_et"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_round_stroke_rate_input3"
                    android:gravity="center_vertical"
                    android:hint="請輸入姓名"
                    android:maxLines="1"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/rate_input_txt_color2"
                    android:textColorHint="@color/rate_input_hint_txt_color"
                    android:textSize="@dimen/rate_input_txt_size" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/rate_result_bottom_height"
                android:layout_marginTop="@dimen/rate_input_item_gap"
                android:background="@color/white"
                android:gravity="center"
                android:text="匯入台幣的帳號"
                android:textColor="@color/headerbg"
                android:textSize="16sp" />

            <include layout="@layout/comm_item_rate_info_result_bottom" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
