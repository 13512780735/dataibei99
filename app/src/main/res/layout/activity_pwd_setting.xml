<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.likeit.currenciesapp.ui.me.PwdSettingActivity">
    <include layout="@layout/layout_header_with_back"></include>
    <RelativeLayout
        android:id="@+id/tv_rlpwd_setting"
        android:layout_width="match_parent"
        android:layout_height="@dimen/width60"
        android:background="@color/white"
        android:paddingLeft="@dimen/padding_normal"
        android:paddingRight="@dimen/padding_normal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawablePadding="5dip"
            android:gravity="center_vertical"
            android:padding="@dimen/padding_normal"
            android:text="@string/me_name15" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_right" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/line"></View>
    <RelativeLayout
        android:id="@+id/tv_rlpwd_edit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/width60"
        android:background="@color/white"
        android:paddingLeft="@dimen/padding_normal"
        android:paddingRight="@dimen/padding_normal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawablePadding="5dip"
            android:gravity="center_vertical"
            android:padding="@dimen/padding_normal"
            android:text="@string/me_name40" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_right" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/line"></View>
    <RelativeLayout
        android:id="@+id/tv_rlpwd_reset"
        android:layout_width="match_parent"
        android:layout_height="@dimen/width60"
        android:background="@color/white"
        android:paddingLeft="@dimen/padding_normal"
        android:paddingRight="@dimen/padding_normal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawablePadding="5dip"
            android:gravity="center_vertical"
            android:padding="@dimen/padding_normal"
            android:text="@string/me_name41" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_right" />
    </RelativeLayout>
</LinearLayout>
