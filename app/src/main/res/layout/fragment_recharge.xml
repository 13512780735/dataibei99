<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.likeit.currenciesapp.ui.home.RechargeFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="20dp"
        android:background="@drawable/dialog_bg_a"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/width70"
            android:background="@mipmap/dialog_header_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/content_rmb"
                android:drawablePadding="@dimen/padding_normal"
                android:gravity="center"
                android:text="@string/bank_name21"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_title" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_daluBank"
            android:layout_width="match_parent"
            android:layout_height="@dimen/rate_input_item_height"
            android:layout_marginTop="@dimen/padding_normal"
            android:paddingLeft="@dimen/padding_normal"
            android:paddingRight="@dimen/padding_normal">

            <TextView
                android:id="@+id/tv_daluBank"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_normal"
                android:text="充值"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/tv_daluBank"
                android:gravity="center_vertical"
                android:hint="支付寶、淘寶、微信錢包"
                android:padding="@dimen/padding_normal"

                android:textSize="11sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:layout_weight="1"
                android:background="@mipmap/icon_right"
                android:gravity="center_vertical"
                android:textColor="@color/white" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/line"></View>

        <RelativeLayout
            android:id="@+id/rl_taiwanBank"
            android:layout_width="match_parent"
            android:layout_height="@dimen/rate_input_item_height"
            android:layout_marginTop="@dimen/padding_normal"
            android:paddingLeft="@dimen/padding_normal"
            android:paddingRight="@dimen/padding_normal">

            <TextView
                android:id="@+id/tv_taiwanBank"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_normal"
                android:text="儲值"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/tv_taiwanBank"
                android:gravity="center_vertical"
                android:hint="賺賺點數"
                android:padding="@dimen/padding_normal"
                android:textSize="11sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:layout_weight="1"

                android:background="@mipmap/icon_right"
                android:gravity="center_vertical"
                android:textColor="@color/white" />
        </RelativeLayout>


    </LinearLayout>
</RelativeLayout>
