<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="280dp"
              android:layout_height="300dp"
              android:background="@drawable/shape_round_home_rate_"
              android:orientation="vertical"
              android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="請選擇存放天數"
        android:textColor="@color/rate_input_txt_color"
        android:textSize="@dimen/rate_input_txt_size"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="存放天數"
            android:textColor="@color/rate_input_txt_color"
            android:textSize="12sp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="到期紅利"
            android:gravity="center"
            android:textColor="@color/rate_input_txt_color"
            android:textSize="12sp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="到期日期"
            android:gravity="center"
            android:textColor="@color/rate_input_txt_color"
            android:textSize="12sp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="是否選擇"
            android:gravity="center"
            android:textColor="@color/rate_input_txt_color"
            android:textSize="12sp"
            />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:background="@drawable/shape_round_rate_ok_"
        android:scrollbars="vertical">

        <LinearLayout
            android:id="@+id/pre_days_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancle_tv"
            android:layout_width="0dp"
            android:layout_height="@dimen/rate_butt_height"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/shape_round_rate_ok_"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/gray0"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/ok_tv"
            android:layout_width="0dp"
            android:layout_height="@dimen/rate_butt_height"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/shape_round_rate_ok_"
            android:gravity="center"
            android:text="確定"
            android:textColor="@color/gray0"
            android:textSize="16sp"/>


    </LinearLayout>

</LinearLayout>