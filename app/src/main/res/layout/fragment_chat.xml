<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    android:orientation="vertical"
    tools:context="com.likeit.currenciesapp.ui.fragment.ChatFragment">

    <!-- TODO: Update blank fragment layout -->
    <include layout="@layout/layout_header_with_back_img"></include>

    <LinearLayout
        android:id="@+id/ll_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_contacts"
            android:layout_width="match_parent"
            android:layout_height="@dimen/width60"
            android:background="@color/white"
            android:padding="10dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@mipmap/icon_contacts"
                android:drawablePadding="20dip"
                android:gravity="center_vertical"
                android:text="@string/chat_name02"
                android:textColor="@color/gray0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="10dip"
                android:gravity="center_vertical"
                android:textColor="@color/gray1"
                android:textSize="12sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/bgcolor"></View>

        <RelativeLayout
            android:id="@+id/rl_online_service"
            android:layout_width="match_parent"
            android:layout_height="@dimen/width60"
            android:background="@color/white"
            android:padding="10dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@mipmap/content_online_service"
                android:drawablePadding="20dip"
                android:gravity="center_vertical"
                android:text="@string/chat_name05"
                android:textColor="@color/gray0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="10dip"
                android:gravity="center_vertical"
                android:textColor="@color/gray1"
                android:textSize="12sp" />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_normal"
            android:background="@color/bgcolor"
            android:text="消息"
            android:textColor="@color/gray0"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
