<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    android:background="@color/bgcolor"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:layout_marginTop="@dimen/margin_normal"
        android:src="@mipmap/content_banner" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_recommend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_recommend01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/content"
                android:drawablePadding="5dip"
                android:gravity="center"
                android:padding="@dimen/padding_normal"
                android:text="@string/home_name20"
                android:textSize="@dimen/text_size_hdpi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_recommend01"
                android:gravity="center"
                android:text="@string/home_name21"
                android:textColor="@color/gray1"
                android:textSize="@dimen/text_size_mdpi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="5dip"
                android:drawableRight="@mipmap/icon_right"
                android:text="@string/home_name11"
                android:textColor="@color/gray1"
                android:textSize="@dimen/text_size_mdpi" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/bgcolor"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dip"
            android:background="@color/white"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_shop01"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="140dip"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/first_product" />


            </LinearLayout>

            <View
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="@color/bgcolor"></View>
     <!--       <LinearLayout
                android:layout_width="0dip"
                android:layout_height="140dip"
                android:layout_weight="3"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:orientation="horizontal"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:orientation="horizontal"></LinearLayout>
            </LinearLayout>-->
             <LinearLayout
                  android:layout_width="0dip"
                  android:layout_height="140dip"
                  android:layout_weight="3"
                  android:orientation="vertical">

                  <LinearLayout
                      android:id="@+id/ll_shop02"
                      android:layout_width="match_parent"
                      android:layout_height="0dip"
                      android:layout_weight="1"
                      android:orientation="horizontal">

                      <LinearLayout
                          android:layout_width="0dip"
                          android:layout_height="match_parent"
                          android:layout_weight="3"
                          android:orientation="vertical"
                          android:paddingTop="10dip">

                          <RelativeLayout
                              android:layout_width="match_parent"
                              android:layout_height="0dip"
                              android:layout_weight="1">

                              <TextView
                                  android:id="@+id/tv_name01"
                                  android:layout_width="match_parent"
                                  android:layout_height="0dip"
                                  android:layout_marginLeft="3dip"
                                  android:layout_weight="1"
                                  android:ellipsize="end"
                                  android:gravity="center_vertical"
                                  android:maxEms="1"
                                  android:singleLine="true"
                                  android:text="@string/home_name22"
                                  android:textColor="@color/headerbg"
                                  android:textSize="12sp"
                                  android:textStyle="bold" />

                              <TextView
                                  android:layout_width="match_parent"
                                  android:layout_height="0dip"
                                  android:layout_marginLeft="3dip"
                                  android:layout_toRightOf="@+id/tv_name01"
                                  android:layout_weight="1"
                                  android:ellipsize="end"
                                  android:gravity="center_vertical"
                                  android:maxEms="1"
                                  android:singleLine="true"
                                  android:text="@string/home_name23"
                                  android:textSize="12sp"
                                  android:textStyle="bold" />
                          </RelativeLayout>


                          <TextView
                              android:layout_width="match_parent"
                              android:layout_height="0dip"
                              android:layout_marginLeft="3dip"
                              android:layout_weight="1"
                              android:ellipsize="end"
                              android:maxEms="1"
                              android:singleLine="true"
                              android:text="@string/home_name24"
                              android:textColor="@color/gray1"
                              android:textSize="11sp" />

                          <LinearLayout
                              android:layout_width="wrap_content"
                              android:layout_height="0dip"
                              android:layout_gravity="right"
                              android:layout_weight="1"
                              android:orientation="horizontal">

                              <TextView
                                  android:id="@+id/home_header_gridView_new_price02"
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:text="¥ 495"
                                  android:textColor="@color/headerbg"
                                  android:textSize="12sp" />

                              <TextView
                                  android:id="@+id/home_header_gridView_old_price02"
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:layout_marginLeft="5dip"
                                  android:text="¥ 500"
                                  android:textColor="@color/gray1"
                                  android:textSize="12sp" />
                          </LinearLayout>
                      </LinearLayout>

                      <ImageView
                          android:layout_width="0dip"
                          android:layout_height="wrap_content"
                          android:layout_weight="2"
                          android:scaleType="centerCrop"
                          android:src="@mipmap/product02" />


                  </LinearLayout>

                  <View
                      android:layout_width="match_parent"
                      android:layout_height="1dip"
                      android:background="@color/bgcolor"></View>

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="0dip"
                     android:layout_weight="1"
                     android:orientation="horizontal">
                     <ImageView
                         android:layout_width="0dip"
                         android:layout_height="match_parent"
                         android:layout_weight="1"
                         android:src="@mipmap/product04"/>
                     <ImageView
                         android:layout_width="0dip"
                         android:layout_height="match_parent"
                         android:layout_weight="1"
                         android:src="@mipmap/product03"/>
                     <ImageView
                         android:layout_width="0dip"
                         android:layout_height="match_parent"
                         android:layout_weight="1"
                         android:src="@mipmap/product05"/>

                 </LinearLayout>
             </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>