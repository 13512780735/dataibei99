<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg"
    android:orientation="vertical"
    tools:context="com.likeit.currenciesapp.ui.login.LoginActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dip"
        android:drawableTop="@mipmap/icon_logo"
        android:gravity="center_horizontal"
        android:text="@string/app_name"
        android:textColor="@color/Loginbg"
        android:textSize="@dimen/text_logo" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="35dp"
            android:layout_toStartOf="@+id/textView"
            android:padding="10dip"
            android:text="@string/login_name01"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_xhdpi" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="114dp"
            android:padding="10dip"
            android:text="@string/login_name02"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_xhdpi" />
    </RelativeLayout>

