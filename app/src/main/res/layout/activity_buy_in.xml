    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/rate_input_item_height"
        android:layout_marginTop="@dimen/rate_input_item_gap"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/please_input_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/currency_name13"
            android:textColor="@color/rate_input_txt_color"
            android:textSize="@dimen/rate_input_txt_size" />

        <EditText
            android:id="@+id/input_value_et"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/shape_round_stroke_rate_input2"
            android:gravity="center_vertical"
            android:inputType="numberDecimal"
            android:lines="1"
            android:paddingLeft="5dp"
            android:text=""
            android:textColor="@color/rate_input_txt_color2"
            android:textSize="@dimen/rate_input_txt_size" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/rate_input_item_height"
        android:layout_marginTop="@dimen/rate_input_item_gap"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/currency_name14"
            android:textColor="@color/rate_input_txt_color"
            android:textSize="@dimen/rate_input_txt_size" />

        <TextView
            android:id="@+id/get_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/headerbg"
            android:textSize="@dimen/rate_input_txt_big_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/rate_input_item_height"
        android:layout_marginTop="@dimen/rate_input_item_gap"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/real_get_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/currency_name15"
            android:textColor="@color/rate_input_txt_color"
            android:textSize="@dimen/rate_input_txt_size" />

        <TextView
            android:id="@+id/real_get_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/rate_input_txt_color"
            android:textSize="@dimen/rate_input_txt_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/rate_input_item_height"
        android:layout_marginTop="@dimen/rate_input_item_gap"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/currency_name16"
            android:textColor="@color/rate_input_txt_color"
            android:textSize="@dimen/rate_input_txt_size" />

        <TextView
            android:id="@+id/hand_money_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/rate_input_txt_color"
            android:textSize="@dimen/rate_input_txt_size" />

        <TextView
            android:id="@+id/give_money_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/rate_input_txt_color"
            android:textSize="@dimen/rate_input_txt_size"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rate_input_item_gap"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:minHeight="@dimen/rate_input_item_height"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/note_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/currency_name17"
            android:textColor="@color/headerbg"
            android:textSize="@dimen/rate_input_txt_small_size" />

    </LinearLayout>

    <TextView
        android:id="@+id/go_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/defulat_button_height"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_round_rate_submit_butt"
        android:gravity="center"
        android:text="送   出"
        android:textColor="@color/white"
        android:textSize="18sp" />
        </LinearLayout>


    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>
</LinearLayout>

