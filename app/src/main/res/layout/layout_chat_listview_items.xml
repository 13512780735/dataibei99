<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dip"
    android:background="@color/white"
    android:orientation="horizontal">

    <com.likeit.currenciesapp.views.RoundImageView
        android:id="@+id/me_header_avatar"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_gravity="center"
        android:layout_marginLeft="10dip"
        android:src="@mipmap/test01" />

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:layout_weight="2"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_weight="1">

            <TextView
                android:id="@+id/me_header_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="小灰灰"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/me_header_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="17:45"
                android:textColor="@color/gray7" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_weight="1">

            <TextView
                android:id="@+id/home_listview_content"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawablePadding="10dip"
                android:gravity="center_vertical"
                android:text="您有一条新的消息，请注意查收"
                android:textColor="@color/gray7"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/message_number"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:gravity="center"
                android:background="@drawable/design_red_point"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>