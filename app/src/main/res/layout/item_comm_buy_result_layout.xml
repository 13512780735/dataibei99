<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/item_comm_buy_layout"
              android:orientation="vertical"

              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/rate_result_item_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <EditText
            android:id="@+id/input_bank_dai_et"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:singleLine="true"
            android:background="@drawable/shape_round_stroke_rate_input3"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text=""
            android:hint="請輸入銀行代號"
            android:textColorHint="@color/rate_input_hint_txt_color"
            android:textColor="@color/rate_input_txt_color2"
            android:textSize="@dimen/rate_input_txt_size"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/rate_result_item_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <EditText
            android:id="@+id/input_bank_type_et"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:singleLine="true"
            android:background="@drawable/shape_round_stroke_rate_input3"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text=""
            android:hint="請輸入大陸銀行行別"
            android:textColorHint="@color/rate_input_hint_txt_color"
            android:textColor="@color/rate_input_txt_color2"
            android:textSize="@dimen/rate_input_txt_size"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/rate_result_item_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <EditText
            android:id="@+id/input_bank_city_et"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:singleLine="true"
            android:background="@drawable/shape_round_stroke_rate_input3"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text=""
            android:hint="例：福建省、漳州市"
            android:textColorHint="@color/rate_input_hint_txt_color"
            android:textColor="@color/rate_input_txt_color2"
            android:textSize="@dimen/rate_input_txt_size"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/rate_result_item_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <EditText
            android:id="@+id/input_bank_zhi_et"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/shape_round_stroke_rate_input3"
            android:gravity="center_vertical"
            android:hint="例：漳州支行"
            android:maxLines="1"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/rate_input_txt_color2"
            android:textColorHint="@color/rate_input_hint_txt_color"
            android:textSize="@dimen/rate_input_txt_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/rate_result_item_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <EditText
            android:id="@+id/input_bank_account_et"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:singleLine="true"
            android:background="@drawable/shape_round_stroke_rate_input3"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text=""
            android:hint="請輸入賬號"
            android:textColorHint="@color/rate_input_hint_txt_color"
            android:textColor="@color/rate_input_txt_color2"
            android:textSize="@dimen/rate_input_txt_size"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/rate_result_item_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <EditText
            android:id="@+id/input_bank_name_et"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:singleLine="true"
            android:background="@drawable/shape_round_stroke_rate_input2"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text=""
            android:hint="請輸入戶名"
            android:textColorHint="@color/rate_input_hint_txt_color"
            android:textColor="@color/rate_input_txt_color2"
            android:textSize="@dimen/rate_input_txt_size"/>
    </LinearLayout>

</LinearLayout>