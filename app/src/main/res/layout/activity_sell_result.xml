<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.likeit.currenciesapp.ui.home.SellResultActivity">
    <include layout="@layout/layout_header_with_back"></include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <include
                layout="@layout/comm_item_rate_info_result"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/rate_result_item_middle_height"
                android:textSize="16sp"
                android:gravity="center"
                android:background="@color/white"
                android:layout_marginTop="@dimen/rate_input_item_gap"
                android:textColor="@color/headerbg"
                android:text="會員約定台灣銀行帳戶"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/rate_result_item_height"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">
                <EditText
                    android:id="@+id/input_bank_dai_et"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:background="@drawable/shape_round_stroke_rate_input3"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text=""
                    android:hint="請輸入銀行代號"
                    android:textColorHint="@color/rate_input_hint_txt_color"
                    android:textColor="@color/rate_input_txt_color2"
                    android:textSize="@dimen/rate_input_txt_size"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/rate_result_item_height"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">
                <EditText
                    android:id="@+id/input_bank_type_et"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:background="@drawable/shape_round_stroke_rate_input3"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text=""
                    android:hint="請輸入銀行名稱/分行"
                    android:textColorHint="@color/rate_input_hint_txt_color"
                    android:textColor="@color/rate_input_txt_color2"
                    android:textSize="@dimen/rate_input_txt_size"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/rate_result_item_height"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">
                <EditText
                    android:id="@+id/input_bank_name_et"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:background="@drawable/shape_round_stroke_rate_input3"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text=""
                    android:hint="請輸入戶名"
                    android:textColorHint="@color/rate_input_hint_txt_color"
                    android:textColor="@color/rate_input_txt_color2"
                    android:textSize="@dimen/rate_input_txt_size"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/rate_result_item_height"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">
                <EditText
                    android:id="@+id/input_bank_account_et"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:background="@drawable/shape_round_stroke_rate_input3"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text=""
                    android:hint="請輸入帳號"
                    android:textColorHint="@color/rate_input_hint_txt_color"
                    android:textColor="@color/rate_input_txt_color2"
                    android:textSize="@dimen/rate_input_txt_size"/>
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/rate_result_bottom_height"
                android:textSize="16sp"
                android:gravity="center"
                android:background="@color/white"
                android:layout_marginTop="@dimen/rate_input_item_gap"
                android:textColor="@color/headerbg"
                android:text="匯入公司的帳號"/>
            <include
                layout="@layout/comm_item_rate_info_result_bottom"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
